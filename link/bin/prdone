#!/bin/bash
set -euo pipefail

#TODO: default to something next to oring/HEAD
usage() {
  cat <<EOF
Usage: $(basename "${BASH_SOURCE[0]}") [-h] [target branch]
Try to delete current branch if it's merged into target("develop" is default if we can't get from upstream) and remote is gone.

-h, --help      Print this help and exit
EOF
  exit
}

if [[ "$*" == *"-h"* ]]; then
    usage
fi


# if this fails cause dangling head, do
# git remote set-head origin -a
defaultBranch=$(git rev-parse --abbrev-ref origin/HEAD)

branch=$(git rev-parse --abbrev-ref HEAD)
target="${1-${defaultBranch-develop}}"
git fetch --prune
if git ls-remote origin "$branch" | grep "$branch" >/dev/null; then
    echo "$branch has remote-tracking, figure it out"
    exit 1
fi
git co "$target"
git pull
git delete-merged "$branch"
